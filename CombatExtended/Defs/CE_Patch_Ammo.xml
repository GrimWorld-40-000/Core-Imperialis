<Defs>
		<!--Ammo Reseach Project-->
	<ResearchProjectDef MayRequire="Grimworld.AstraMilitarum">
		<defName>HP_AM_Ammo</defName>
		<label>grimworld (AM) ammuntions</label>
		<description>Allows for the production of various ammunition used by guns like autoguns.</description>
		<baseCost>1000</baseCost>
		<techLevel>Industrial</techLevel>
		<tab>ODZ_40K_ImperiumOfMan</tab>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<prerequisites>
			<li>ODZ_40K_MilitarumFabricationBench</li>
		</prerequisites>
		<researchViewX>1.00</researchViewX>
		<researchViewY>6.00</researchViewY>
	</ResearchProjectDef>

