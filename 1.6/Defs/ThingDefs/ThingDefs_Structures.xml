		</statBases>
		<researchPrerequisites>
			<li>GW_AM_BasicImperiumDefense</li>
		</researchPrerequisites>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.60</fillPercent>
		<coversFloor>true</coversFloor>
		<drawStyleCategory>Walls</drawStyleCategory>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<useStuffTerrainAffordance>true</useStuffTerrainAffordance>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<holdsRoof>true</holdsRoof>
        <designationCategory>GrimworldCategory</designationCategory>
		<staticSunShadowHeight>1</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>7</costStuffCount>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
			<canPlaceOverWall>true</canPlaceOverWall>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/Embrasure/GW_OrdinaryWalls_Emb_Atlas</texPath>
			</blueprintGraphicData>
			<paintable MayRequire="Rimworld.Biotech">true</paintable>
		</building>
		<comps>
		</comps>
		<disableImpassableShotOverConfigError>true</disableImpassableShotOverConfigError>
	</ThingDef>

