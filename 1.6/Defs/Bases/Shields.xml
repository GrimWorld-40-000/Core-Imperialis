    </ThingCategoryDef>

    <ThingCategoryDef>
        <defName>GW_StormShield</defName>
        <label>storm shields</label>
        <parent>GW_Shield</parent>
    </ThingCategoryDef>

    <ApparelLayerDef>
        <defName>GW_Shield</defName>
        <label>shield</label>
        <drawOrder>590</drawOrder>
    </ApparelLayerDef>
