<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BaseBullet">
        <defName>HP_Bullet_HeavyBolter</defName>
        <label>bolter round</label>
        <graphicData>
          <texPath>Things/Projectiles/Bolter_Projectile</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
          <damageDef>Bullet</damageDef>
          <damageAmountBase>45</damageAmountBase>
          <stoppingPower>1</stoppingPower>
          <speed>50</speed>
        </projectile>
      </ThingDef>
    
      <SoundDef> <!--In this file because all heavy bolter guns are using this sound-->
		<defName>HP_Heavy_Bolt_Gun_Sound</defName>
		<context>MapOnly</context>
		<eventNames />  
		<maxSimultaneous>10</maxSimultaneous>  
        <subSounds>
          <li>
            <grains>
              <li Class="AudioGrain_Folder">
                <clipPath>Weapons/Boltgun</clipPath>
              </li>
            </grains>      
            <volumeRange>40~40</volumeRange>      
          </li>
        </subSounds>
	</SoundDef>
    
</Defs>