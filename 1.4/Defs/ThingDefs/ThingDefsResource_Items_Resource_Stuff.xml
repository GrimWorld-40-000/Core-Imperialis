<Defs>
    <ThingDef ParentName="ResourceBase">
        <defName>HP_Adamantium</defName>
        <label>Adamantium</label>
        <description>Adamantium is a metal that is perhaps the strongest substance known to the Imperium, and is invulnerable to attacks from most known weapons.</description>
        <graphicData>
            <texPath>Things/Resource/Adamantium</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <resourceReadoutPriority>First</resourceReadoutPriority>
        <soundInteract>Silver_Drop</soundInteract>
        <soundDrop>Silver_Drop</soundDrop>		
        <stackLimit>500</stackLimit>
        <useHitPoints>false</useHitPoints>
        <resourceReadoutAlwaysShow>true</resourceReadoutAlwaysShow>
        <statBases>
            <MarketValue>150</MarketValue>
            <Mass>1</Mass>
            <StuffPower_Armor_Sharp>1.24</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>1.12</StuffPower_Armor_Blunt>
            <StuffPower_Armor_Heat>2.0</StuffPower_Armor_Heat>
