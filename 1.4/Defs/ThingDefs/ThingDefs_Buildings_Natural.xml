<Defs>

  <!--============================ Resource rocks ===============================-->

  <ThingDef ParentName="RockBase">
    <defName>MineableHP_Adamantium</defName>
    <label>Adamantium ore</label>
    <description>Rock containing bits of Adamantium.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(89,83,68)</color>
      <colorTwo>(169,170,169)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>5000</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>HP_Adamantium</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.10</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>4~10</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

