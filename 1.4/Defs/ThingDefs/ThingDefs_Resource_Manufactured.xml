            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>StoneBlocks</li>
            </categories>
        </fixedIngredientFilter>
        <recipeUsers>
            <li>GW_Furnace</li>
