        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>StoneBlocks</li>
            </categories>
        </fixedIngredientFilter>
        <recipeUsers>
            <li>GW_Furnace</li>
        </recipeUsers>
        <products>
            <HP_Ceramite>20</HP_Ceramite>
        </products>
    </RecipeDef>
</Defs>