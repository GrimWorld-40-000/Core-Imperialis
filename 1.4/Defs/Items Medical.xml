<Defs>

  <!--=============== Field medkit ====================-->

<ThingDef ParentName="MedicineBase">
    <defName>FieldMedkit</defName>
    <label>Field medkit</label>
    <description>A kit of basic medicine, favoured by the Astra Militarum for being simple to mass produce in bulk.</description>
    <possessionCount>4</possessionCount>
    <graphicData>
      <texPath>Things/Medicine/FieldMedkit</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <statBases>
      <MarketValue>12</MarketValue>
      <Mass>0.50</Mass>
      <Flammability>0.6</Flammability>
      <MedicalPotency>0.70</MedicalPotency>
      <MedicalQualityMax>0.70</MedicalQualityMax>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
	<costList>
     <MedicineHerbal>3</MedicineHerbal>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>3</Crafting>
        <Intellectual>3</Intellectual>
      </skillRequirements>
      <bulkRecipeCount>4</bulkRecipeCount>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardCore</li></thingSetMakerTags>
    <allowedArchonexusCount>15</allowedArchonexusCount>
  </ThingDef>

