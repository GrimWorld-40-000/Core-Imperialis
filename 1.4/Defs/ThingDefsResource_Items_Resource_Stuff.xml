            <SharpDamageMultiplier>1.3</SharpDamageMultiplier>
            <BluntDamageMultiplier>1.1</BluntDamageMultiplier>
        </statBases>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <deepCommonality>1</deepCommonality>
        <deepCountPerPortion>10</deepCountPerPortion>
        <deepLumpSizeRange>5~10</deepLumpSizeRange>
        <stuffProps>
            <categories>
                <li>Metallic</li>
            </categories>
            <commonality>0.1</commonality>
            <appearance>Metal</appearance>
            <color>(180,173,150)</color>
            <constructEffect>ConstructMetal</constructEffect>
            <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
            <statOffsets>
                <Beauty>1</Beauty>
            </statOffsets>
            <statFactors>
                <MaxHitPoints>5.0</MaxHitPoints>
                <Flammability>0</Flammability>
                <Beauty>1</Beauty>
                <DoorOpenSpeed>3</DoorOpenSpeed>
                <MeleeWeapon_CooldownMultiplier>0.5</MeleeWeapon_CooldownMultiplier>
            </statFactors>
        </stuffProps>
    </ThingDef>

